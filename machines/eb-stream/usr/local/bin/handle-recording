#!/bin/bash
set -e

BASE=/usr/local/eb/recordings
STREAM=$1

[[ -z "$STREAM" ]] && exit 1


# -----------------------------------------------------------------------------
function on_exit {
    :
}
trap on_exit EXIT


# -----------------------------------------------------------------------------
ffmpeg -v quiet -i $BASE/$STREAM.flv -nostdin -nostats \
    -c copy -movflags faststart $BASE/$STREAM.mp4

rm -f $BASE/$STREAM.flv
